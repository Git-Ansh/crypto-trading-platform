{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@crypto-trading-platform/source"],
    "paths": {
      "@crypto-trading-platform/shared-types": ["packages/shared-types/src/index.ts"],
      "@crypto-trading-platform/shared-auth": ["packages/shared-auth/src/index.ts"],
      "@crypto-trading-platform/shared-config": ["packages/shared-config/src/index.ts"],
      "@crypto-trading-platform/shared-utils": ["packages/shared-utils/src/index.ts"]
    }
  }
}
