# /etc/nginx/sites-available/api.crypto-pilot.dev
# API Gateway - handles auth, MongoDB, proxies to bot-orchestrator

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name api.crypto-pilot.dev;

    location / {
        return 301 https://$host$request_uri;
    }
}

# Main HTTPS server block
server {
    listen 443 ssl http2;
    server_name api.crypto-pilot.dev;

    # SSL settings - will be created by certbot
    ssl_certificate /etc/letsencrypt/live/api.crypto-pilot.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.crypto-pilot.dev/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;

    # Security headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload" always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options SAMEORIGIN always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # CORS is handled by the Express app - do NOT add CORS headers here
    
    # Health check endpoint
    location /health {
        proxy_pass http://localhost:5001/health;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # All API routes
    location / {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Origin $http_origin;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeout settings for long-running requests
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
        proxy_connect_timeout 60s;
    }
}
